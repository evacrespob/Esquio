    <None Update="Esquio.Configuration.Store\appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Esquio.UI.Api\Seedwork\Data\Migrations\" />
  </ItemGroup>

